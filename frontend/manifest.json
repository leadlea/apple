{
  "name": "Mac Status PWA",
  "short_name": "Mac Status",
  "description": "パーソナライズされたMac監視・ステータス報告ツール",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "background_color": "#FFFFFF",
  "theme_color": "#007AFF",
  "orientation": "any",
  "categories": ["productivity", "utilities"],
  "lang": "ja",
  "dir": "ltr",
  "prefer_related_applications": false,
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "shortcuts": [
    {
      "name": "システム状態確認",
      "short_name": "ステータス",
      "description": "現在のシステム状態を確認",
      "url": "/?action=status",
      "icons": [
        {
          "src": "/static/icons/shortcut-status.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "チャット開始",
      "short_name": "チャット",
      "description": "アシスタントとチャットを開始",
      "url": "/?action=chat",
      "icons": [
        {
          "src": "/static/icons/shortcut-chat.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "icons": [
